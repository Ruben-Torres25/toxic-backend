{
  "name": "toxic-backend",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "npm run db:init && nest start --watch",
    "smoke": "ts-node -r tsconfig-paths/register -r dotenv/config scripts/smoke-e2e.ts",
    "build": "nest build",
    "db:init": "ts-node -r tsconfig-paths/register -r dotenv/config src/db/ensure-database.ts",
    "seed": "ts-node -r tsconfig-paths/register -r dotenv/config src/seeds/seed.ts",
    "lint": "eslint ./src --ext .ts",
    "typeorm:run": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js -d src/db/data-source.ts migration:run",
    "typeorm:revert": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js -d src/db/data-source.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
